<h1>Listing users</h1>
<%= link_to 'Create new', new_user_path, class:'btn btn-primary' %>
<hr/>

<table class="table">
  <thead>
    <tr>
      <th>Username</th>
      <th>Password</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.password %></td>
        <td><%= user.email %></td>
        <td>
          <div class="btn-group btn-group">
            <%= link_to 'Show', user, class:'btn btn-primary' %>
            <%= link_to 'Edit', edit_user_path(user), class:'btn btn-success' %>
            <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
